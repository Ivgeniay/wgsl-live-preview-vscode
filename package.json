{
  "name": "wgsl-live-preview",
  "icon": "icon.png",
  "displayName": "WGSL Live Preview",
  "version": "0.0.3",
  "description": "Live preview for WGSL (WebGPU Shading Language) shaders with real-time rendering",
  "publisher": "EvgeniiRuchkin",
  "author": "Evgenii",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ivgeniay/wgsl-live-preview-vscode"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Visualization"
  ],
  "keywords": [
    "wgsl",
    "webgpu",
    "shader",
    "glsl",
    "graphics",
    "preview",
    "live",
    "rendering"
  ],
  "activationEvents": [
    "onLanguage:wgsl"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "wgsl-live-preview.showPreview",
        "title": "WGSL: Show Live Preview"
      },
      {
        "command": "wgsl-live-preview.createNewShader",
        "title": "WGSL: Create New Shader"
      }
    ],
    "languages": [
      {
        "id": "wgsl",
        "extensions": [
          ".wgsl"
        ],
        "aliases": [
          "WGSL",
          "wgsl"
        ]
      }
    ],
    "keybindings": [
      {
        "command": "wgsl-live-preview.showPreview",
        "key": "ctrl+shift+w",
        "when": "editorLangId == wgsl"
      }
    ],
    "snippets": [
      {
        "language": "wgsl",
        "path": "./snippets/wgsl.json"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "wgsl-live-preview.createNewShader",
          "group": "navigation@10"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && node copy-assets.js && node build-webview.js --production",
    "watch": "npm-run-all --parallel watch:*",
    "watch:extension": "tsc -watch -p ./",
    "watch:assets": "nodemon --watch src/webview --ext html,wgsl --exec \"node copy-assets.js\"",
    "watch:webview": "node build-webview.js --watch",
    "build:webview": "node build-webview.js",
    "build:webview:prod": "node build-webview.js --production"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.7.1",
    "@webgpu/types": "^0.1.69",
    "esbuild": "^0.27.3",
    "nodemon": "^3.1.11",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  }
}
